<?xml version="1.0" encoding="utf-8"?>
<au.com.tyo.common.ui.PreviewBox xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sun_opaque"
    >

    <au.com.tyo.common.ui.ImageViewAutoRefreshed
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType = "centerCrop"
        android:id="@+id/preview_box_bg_img"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/preview"
        android:layout_gravity="center_horizontal|center_vertical"
        android:textColor="@color/lb_tv_white"
        android:id="@+id/preview_box_title"
        />

</au.com.tyo.common.ui.PreviewBox>
